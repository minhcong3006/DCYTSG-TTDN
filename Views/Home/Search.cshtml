@model IEnumerable<Webtt.Models.Product>

@{
    ViewData["Title"] = "Tìm kiếm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<contents>
    <div class="w-clear wikis">
        <div class="w-clear">
            <div class="w-clear">
                <div class="main-tit">
                    <h2 class="name">@ViewBag.message</h2>
                </div>
            </div>
            <div class="w-clear box-share">
                <div class="addthis_native_toolbox">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-md-2">
                                <div class="box-sp w-clear" style=" height: 250px">
                                    <a asp-action="Index" asp-controller="Detail" asp-route-id="@item.ProductId" asp-route-name="@item.ProductName" tabindex="-1">
                                        <div class="box-sp img">
                                            <img src="~/img/@item.ProductImage" alt="" width="250" height="250">
                                        </div>

                                    </a>
                                    <div class="info w-clear">
                                        <div class="w-clear">
                                            <a href="" tabindex="-1">
                                                <h3>
                                                    @item.ProductName
                                                </h3>
                                            </a>
                                            <div class="info-gia flex">
                                                <div class="gia">
                                                    Giá:
                                                    <span>@item.ProductPrice</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</contents>


